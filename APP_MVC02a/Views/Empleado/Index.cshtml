@model IEnumerable<APP_MVC02a.Models.empleado>

@{
    ViewBag.Title = "Mantenimiento de Empleado";
}

<script src="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.css" type="text/javascript"></script>
<link href="//cdn.datatables.net/plug-ins/1.10.7/integration/bootstrap/3/dataTables.bootstrap.js" rel="stylesheet" type="text/css" />
<script type="text/javascript">
    $(function () {
        $("#idListadoEmpleado").dataTable();

    });

</script>


<h2>Listado de Empleado</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-success btn-flat">Registrar Nuevo</a>
</p>
<table id="idListadoEmpleado" class="table table-bordered table-striped table-condensed table-hover">
    <tr>
        <th>
            ID
        </th>
         <th>
            NOMBRE
        </th>
        <th>
            A. PATERNO
        </th>
        <th>
            A. MATERNO
        </th>
        <th>
            DIRECCIÓN
        </th>
        <th>
            DNI
        </th>
        <th>
            EMAIL
        </th>
        <th>
            FECHA REGISTRO
        </th>
        <th>
            ESTADO
        </th>
        <th>
            ROL
        </th>
        <th>
            DISTRITO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idempleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apePat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apeMate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaRegistro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado.descrip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rol.descrip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.distrito.descrip)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idempleado}) |
            @Html.ActionLink("Ver Detalle", "Details", new { id=item.idempleado }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idempleado })
           
        </td>
    </tr>
}

    

</table>
